<div class="col-md-6 buffer-top">

<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), novalidate: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label "Email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Пароль" %>
    <% if @minimum_password_length %>
    <em>(Не менее <%= @minimum_password_length %> символов)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Пароль еще раз" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрировать меня!", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
